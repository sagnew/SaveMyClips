{
    "manifest_version": 2,

    "name": "SaveMyClips",
    "description": "",
    "version": "1.0",

    "permissions": [
        "clipboardWrite",
        "clipboardRead"
        ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["copylisten.js"]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js", "clipboard.js"]
    }
}
